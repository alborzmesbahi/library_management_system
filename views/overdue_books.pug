extends ./layout
block content
    h1 #{title}
    p
        a.button(href='new_book.html') Create New Book
    p
        | Filters 
        a(href='all_books.html') All
        |  
        a(href='overdue_books.html') Overdue
        |  
        a(href='checked_books.html') Checked Out
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year Released
        tbody
            each overdueBook in overdueBooks
                tr
                    td
                        a(href='book_detail.html')= overdueBook.title
                    td= overdueBook.author
                    td= overdueBook.genre
                    td= overdueBook.first_published
